                }
              ]
            },
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/assets/all",
              "host": ["{{base_url}}"],
              "path": ["assets", "all"]
            }
          }
        },
        {
          "name": "Get Asset by ID",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/assets/:id",
              "host": ["{{base_url}}"],
              "path": ["assets", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "asset-uuid-here"
                }
              ]
            }
          }
        },
        {
          "name": "Get Download URL",
          "request": {
            "auth": {
              "type": "bearer",
