                }
              ]
            }
          }
        },
        {
          "name": "Share Asset",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "url": {
              "raw": "{{base_url}}/assets/:id/share",
              "host": ["{{base_url}}"],
              "path": ["assets", ":id", "share"],
              "variable": [
                {
                  "key": "id",
                  "value": "asset-uuid-here"
                }
              ]
            }
          }
        },
        {
          "name": "Get Shared Asset (Public)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/assets/shared/:id",
              "host": ["{{base_url}}"],
              "path": ["assets", "shared", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "shared-asset-uuid-here"
                }
              ]
            }
          }
        },
        {
          "name": "Delete Asset",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "DELETE",
            "url": {
              "raw": "{{base_url}}/assets/:id",
              "host": ["{{base_url}}"],
              "path": ["assets", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "asset-uuid-here"
                }
              ]
            }
          }
        }
      ]
    },
