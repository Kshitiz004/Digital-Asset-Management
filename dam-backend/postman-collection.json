                {
                  "key": "token",
                  "value": "{{access_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/assets/:id/download",
              "host": ["{{base_url}}"],
              "path": ["assets", ":id", "download"],
              "variable": [
                {
                  "key": "id",
                  "value": "asset-uuid-here"
                }
              ]
            }
          }
        },
        {
          "name": "Update Asset Metadata",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"tags\": \"updated,tags\",\n  \"description\": \"Updated description\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/assets/:id",
              "host": ["{{base_url}}"],
              "path": ["assets", ":id"],
